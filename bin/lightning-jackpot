#!/usr/bin/env node
'use strict'

process.env.NODE_OPTIONS =
  '-r ts-node/register/transpile-only -r reflect-metadata -r dotenv/config -r isomorphic-unfetch'
process.env.TS_NODE_TRANSPILE_ONLY = true
process.env.TYPEORM_ENTITIES = 'src/backend/**/*.entity.ts'
process.env.TYPEORM_MIGRATIONS = 'src/backend/**/*.migration.ts'
process.env.TYPEORM_SUBSCRIBERS = 'src/backend/**/*.subscriber.ts'
require('ts-node').register({
  project: process.cwd() + '/src/backend/tsconfig.json',
})
require(process.cwd() + '/src/backend/console')